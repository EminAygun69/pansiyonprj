<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <nav>
        <a href="/">Ana Sayfa</a>
        <a href="/hakkimizda">Hakkımızda</a>
        <a href="/odalar">Odalar</a>
        <a href="/rezervasyon">Rezervasyon</a>
        <a href="/iletisim">İletişim</a>
        <a href="/giris">Giriş Yap</a>
        <a href="/profil">Profil</a>
    </nav>

    <div>
        <% odalar.forEach(function(oda) { %>
            <div class="oda-karti">
                <h2><%= oda.oda_adi %></h2>
                <p>Oda Tipi: <%= oda.oda_tipi %></p>
                <p>Yatak Sayısı: <%= oda.yatak_sayisi %></p>
                <p>Kişi Sayısı: <%= oda.kisi_sayisi %></p>
                <p>Fiyat: <%= oda.fiyat %> TL</p>
                <p>Açıklama: <%= oda.aciklama %></p>
                <p>Durum: <%= oda.durum %></p>
        
                <div>
                    <% oda.resimler.forEach(function(resim) { %>
                        <img src="<%= resim %>" alt="Oda Resmi">
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>
    
</body>
</html>